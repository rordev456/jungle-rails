<h1>Login ! </h1>
<%= form_tag sessions_path %>
  <div class="field">
    Email: <br>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
   Password: <br>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
   Confirm Password: <br>
    <%= password_field_tag :password_confirmation %>
  </div>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>